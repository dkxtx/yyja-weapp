/* pages/my/fix/index.wxss */
.bg-class {
  background-color: #F5F5F4;
  height: 100%;
  width: 100%;
  position: absolute;
}

.item {
  width: 100%;
  height: 230rpx;
  background: white;
  border-bottom: 1rpx solid rgba(235, 235, 235, 1);
  display: flex;
}

.img-class {
  width: 170rpx;
  height: 170rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.img-count {
  height: 32rpx;
  width: 60rpx;
  background: rgba(0, 0, 0, 1);
  border-radius: 16rpx;
  font-size: 10px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-left: 100rpx;
  margin-top: -50rpx;
}

.content-class {}

.title {
  margin-left: 10rpx;
  margin-top: 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.time {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 103, 104, 1);
  margin-left: 10rpx;
  margin-top: 30rpx;
}

.fixed-class{
  width: 88rpx;
  height: 72rpx;
  position: absolute;
  margin-left: 85%;
  margin-top: 120rpx;
}