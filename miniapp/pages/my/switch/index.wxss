/* pages/my/switch/index.wxss */
.header{
  margin-top: 20rpx;
  width: 100%;
  height: 316rpx;
  text-align: center;
}

.header-img{
  width: 700rpx;
  height: 100%;
}

.current-title{
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(87,60,10,1);
  position: absolute;
  left: 60rpx;
  top: 40rpx;
}

.house-name{
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(87,60,10,1);
  position: absolute;
  left: 60rpx;
  top: 100rpx;
}

.tag{
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  opacity:0.35;
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(87,60,10,1);
  padding: 0 10rpx;
  margin-left: 10rpx;
}

.unit{
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(87,60,10,1);
  position: absolute;
  left: 60rpx;
  top: 180rpx;
}

.seciton{
  width: 100%;
  height: 80rpx;
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(152,153,154,1);
  line-height: 80rpx;
  padding: 0 30rpx;
}

.item{
  width: 100%;
  padding: 30rpx 30rpx;
  background-color: white;
  height: 120rpx;
  border-bottom: 1rpx solid rgba(235, 235, 235, 1);
}

.item-title{
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(36,36,36,1);
}

.item-tag{
  border-radius:18rpx;
  border:2rpx solid rgba(213,179,136,1);
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(213,179,136,1);
  padding: 0 10rpx;
  margin-left: 10rpx;
}

.item-unit{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,153,154,1);
  margin-top: 30rpx;
}

.switch-item{
  margin-left: 75%;
  margin-top: -40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(213,179,136,1);
}

.add-class{
  width: 100%;
  padding: 30rpx;
  background-color: white;
  height: 60rpx;
  line-height: 60rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(213,179,136,1);
}