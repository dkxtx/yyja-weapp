<!--pages/my/index.wxml-->
<view class="header-class">
	<view class="header-content">
		<view class="header-desc">
			<view wx:if="{{is_login == false}}" style="display:flex">
				<image src="/images/icon-user@2x.png" style="width:110rpx;height:110rpx"></image>
				<view style="font-size:44rpx;font-family:PingFangSC-Regular,PingFang SC;font-weight:400;color:rgba(0,0,0,1);margin-left:20rpx">登录/注册</view>
			</view>
			<view wx:if="{{is_login == true}}" style="display:flex">
				<image src="{{user_info.avatarUrl?user_info.avatarUrl:'/images/icon-user@2x.png'}}" style="width:110rpx;height:110rpx"></image>
				<view style="font-size:44rpx;font-family:PingFangSC-Regular,PingFang SC;font-weight:400;color:rgba(0,0,0,1);margin-left:20rpx">{{user_info.nickName?user_info.nickName:"test"}}</view>
				<view class="user-tag">业主</view>
			</view>
		</view>
		<view class="header-setting">
			<image src="/images/icon-sz@2x.png" style="width:48rpx;height:48rpx"></image>
		</view>
	</view>
	<view class="header-location">
		<image style="width:24rpx;height:32rpx;margin-left:20rpx;margin-top:18rpx" src="/images/icon-dw@2x.png"></image>
		<view class="location-class">中德英伦联邦1栋二单元1301</view>
    <view class="switch-btn">切换房产</view>
	</view>
</view>
<view class="line"></view>
