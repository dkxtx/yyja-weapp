/* pages/home/submit/index.wxss */
.address-item{
  width: 100%;
  padding: 30rpx 30rpx;
}
.address{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,103,104,1);
}
.address-detail{
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(36,36,36,1);
  margin-top: 20rpx;
}
.user{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,103,104,1);
  margin-top: 20rpx;
}
.line{
  width: 100%;
  margin-top: 20rpx;
  height: 20rpx;
  background: #F5F5F4;
}

.section{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(36,36,36,1);
  width: 100%;
  padding: 0 30rpx;
  background: #ffffff;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}
.item {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 230rpx;
  display: flex;
  border-bottom: 1px solid #F0F0F0;
}


.item-left {
  /* flex-basis: 170rpx; */
  width: 170rpx;
}

.store-img-class{
  width:170rpx;
  height:170rpx;
  border-radius:10rpx;
  margin-top:30rpx;
}

.item-right {
  flex: 1;
  padding: 30rpx 30rpx;
}

.list-store-name{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}

.store-tags{
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,103,104,1);
}


.store-activity{
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,103,104,1);
}

.store-distance{
  position: absolute;
  right: 30rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(195,195,195,1);
  margin-top: 20rpx;
}

.footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background:rgba(255,255,255,1);
  border-top: 2rpx solid #F5F5F4;
  display: flex;
}

.footer-price{
  width: 70%;
  height: 100%;
}

.submit-btn{
  width: 30%;
  height: 100%;
  background:rgba(213,179,136,1);
  font-size:16px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height: 100rpx;
  text-align: center;
}

.total-price{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(101,102,103,1);
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.goods-count{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(151,152,153,1);
  margin-left: 30rpx;
  margin-top: 10rpx;
}