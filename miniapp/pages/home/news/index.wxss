/* pages/home/news/index.wxss */
.bg-class {
  background-color: #F5F5F4;
  height: 100%;
  width: 100%;
  position: absolute;
}

.item {
  width: 100%;
  height: 200rpx;
  display: flex;
  border-bottom: 1px solid #F0F0F0;
  background-color: white;
}

.item-left {
  flex: 1;
}

.item-right {
  flex-basis: 158rpx;
  width: 158rpx;
}

.item-right-image {
  margin-top: 42rpx;
  width: 120rpx;
  height: 120rpx;
}

.item-left-title {
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  font-size: 14px;
  color: #333333;
  max-height: 120rpx;
  overflow: hidden;
}

.item-left-bottom {
  margin-left: 30rpx;
  margin-right: 20rpx;
  margin-top: 16rpx;
  display: flex;
  height: 34rpx;
  justify-content: space-between;
}

.item-left-bottom-red {
  font-size: 12px;
  color: #7B7B7B;
}