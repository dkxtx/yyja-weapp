/* pages/home/pay/index.wxss */
.top_box {
  width: 90%;
  height: 68rpx;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FCF8F3;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top_icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.top_text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-left: 14rpx;
}

.swiper-tab {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-bottom: 0;
}

.swiper-tab-list {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(36, 36, 36, 1);
  width: 36%;
}

.current {
  border-bottom: 5rpx solid #D5B388;
  border-radius: 4rpx;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #F5F5F4;
}

.no_pay_swiper_box {
  width: 90%;
  margin: 20rpx auto;
  padding: 20rpx;
  background-color: #ffffff;
}

.no_swiper_box {
  display: flex;
  flex-direction: row;
}

.no_pay_box {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 100%;
}

.box_date {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(36, 36, 36, 1);
}

.no_pay_bottom_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}

.no_pay_fee {
  font-size: 44rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(253, 104, 66, 1);
  flex: 1;
}

.right_icon {
  width: 24rpx;
  height: 16rpx;
}

.detail_box {
  border-top: 4rpx dashed #EBEBEB;
  margin-top: 10rpx;
  padding: 10rpx 0;
}

.box_text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(124, 124, 124, 1);
}

.box_content {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.box_content_fee {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(253, 104, 66, 1);
}

/*详情中checkbox的样式  */
.detail_checkbox {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  padding-bottom: 20rpx;
}

.detail_checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.detail_checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 支付box的样式 */
.pay_box {
  position: fixed;
  bottom: 50px;
  background-color: #ffffff;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.pay_box_label {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(36, 36, 36, 1);
}

.pay_box_content {
  width: 90%;
  margin-left: 5%;
}

.pay_btn {
  width: 10%;
  height: 100rpx;
  background-color: #D5B388;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 70rpx;
  border-radius: 0;
}

/*checkbox 整体大小  */
checkbox {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}

/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #D5B388;
  border-color: #D5B388;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}