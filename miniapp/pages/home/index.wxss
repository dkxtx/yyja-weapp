.banner {
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.swiper-banner {
    width: 100%;
    height: 100%;
}

.news {
    margin-top: 20rpx;
}

.news-nav {
    width: 100%;
    height: 78rpx;
    display: flex;
    justify-content: space-between;
}

.news-nav-title {
    margin-left: 30rpx;
    line-height: 78rpx;
    font-size: 17px;
    width: 200rpx;
    color: #333333;
}

.news-nav-right {
    display: flex;
}

.news-nav-sub {
    margin-right: 10rpx;
    line-height: 78rpx;
    font-size: 12px;
    color: #999999;
}

.news-nav-icon {
    width: 16rpx;
    height: 78rpx;
    margin-top: 0rpx;
    margin-right: 20rpx;
}

.item {
    width: 100%;
    height: 200rpx;
    display: flex;
    border-bottom: 1px solid #F0F0F0;
}

.item-left {
    flex: 1;
}

.item-right {
    flex-basis: 158rpx;
    width: 158rpx;
}

.item-right-image {
    margin-top: 42rpx;
    width: 120rpx;
    height: 120rpx;
}

.item-left-title {
    margin-top: 20rpx;
    margin-left: 30rpx;
    margin-right: 20rpx;
    font-size: 14px;
    color: #333333;
    max-height: 120rpx;
    overflow: hidden;
}

.item-left-bottom {
    margin-left: 30rpx;
    margin-right: 20rpx;
    margin-top: 16rpx;
    display: flex;
    height: 34rpx;
    justify-content: space-between;
}

.item-left-bottom-red {
    font-size: 12px;
    color: #7B7B7B;
}

.activity {
    margin-top: 20rpx;
    height: 180rpx;
    overflow: hidden;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.activity-banner {
    width: 100%;
    height: 180rpx;
}