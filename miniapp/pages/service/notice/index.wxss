/* pages/service/notice/index.wxss */
.line {
  width: 100%;
  height: 20rpx;
  background-color: #F5F5F4;
}

.box {
  width: 95%;
  margin: auto;
  border-bottom: 2rpx solid #F5F5F4;
  padding: 30rpx 0;
}

.box_title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.box_content {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 22rpx;
}

.box_date {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(123, 123, 123, 1);
  margin-top: 30rpx;
  text-align: right;
}